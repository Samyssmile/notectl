{
	"name": "@notectl/core",
	"version": "1.0.4",
	"description": "A modern and accessable rich text editor shipped as a single Web Component. Immutable state, transaction-based architecture, and a plugin system that powers every feature.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/notectl-core.js",
	"module": "./dist/notectl-core.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/notectl-core.mjs",
			"require": "./dist/notectl-core.js"
		}
	},
	"files": ["dist", "README.md"],
	"keywords": [
		"rich-text-editor",
		"web-component",
		"contenteditable",
		"editor",
		"wysiwyg",
		"typescript",
		"plugin-system",
		"immutable-state",
		"notectl"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Samyssmile/notectl.git",
		"directory": "packages/core"
	},
	"homepage": "https://github.com/Samyssmile/notectl",
	"bugs": {
		"url": "https://github.com/Samyssmile/notectl/issues"
	},
	"scripts": {
		"build": "vite build",
		"prepack": "cp ../../README.md ./README.md",
		"postpack": "rm -f ./README.md",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"dev": "vite build --watch"
	},
	"dependencies": {
		"dompurify": "^3.3.1"
	},
	"devDependencies": {
		"happy-dom": "^20.6.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.18"
	}
}
