{
  "name": "@notectl/react",
  "version": "0.0.2",
  "type": "module",
  "main": "./dist/react.umd.cjs",
  "module": "./dist/react.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "@notectl/core": "*",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@notectl/core": "*",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.1",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "notectl",
    "react",
    "editor"
  ],
  "author": "Samuel Abramov",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samyssmile/notectl",
    "directory": "packages/adapters/react"
  }
}
