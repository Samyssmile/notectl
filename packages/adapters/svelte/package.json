{
  "name": "@notectl/svelte",
  "version": "0.0.5",
  "description": "Svelte adapter for NotectlEditor",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"No tests yet\"",
    "lint": "eslint src --ext .ts,.svelte",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "keywords": [
    "notectl",
    "editor",
    "svelte",
    "rich-text",
    "wysiwyg"
  ],
  "author": "Samuel Abramov",
  "license": "MIT",
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0",
    "@notectl/core": "*"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Samyssmile/notectl.git",
    "directory": "packages/adapters/svelte"
  },
  "publishConfig": {
    "access": "public"
  }
}
