{
  "name": "@notectl/vue",
  "version": "0.0.2",
  "type": "module",
  "main": "./dist/vue.umd.cjs",
  "module": "./dist/vue.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue.js",
      "require": "./dist/vue.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vue-tsc && vite build",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "@notectl/core": "*",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@notectl/core": "*",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.1",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
  },
  "keywords": [
    "notectl",
    "vue",
    "editor"
  ],
  "author": "Samuel Abramov",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samyssmile/notectl",
    "directory": "packages/adapters/vue"
  }
}
